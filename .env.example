# Midnight Network Configuration - PRODUCTION

# ===== BLOCKCHAIN CONFIGURATION =====
# Your deployed PrivateDiploma contract address
VITE_CONTRACT_ADDRESS=mn_contract_1234567890abcdef...

# Midnight Network RPC Endpoint
VITE_RPC_URL=https://testnet-rpc.midnight.network

# Network ID (1 = mainnet, 0 = testnet)
VITE_NETWORK_ID=0

# ===== WALLET CONFIGURATION =====
# Supported wallets: lace, midnight
VITE_WALLET_TYPE=lace

# ===== SECURITY =====
# Enable transaction confirmation before signing
VITE_REQUIRE_CONFIRMATION=true

# Enable transaction logging
VITE_LOG_TRANSACTIONS=true

# ===== FEATURES =====
# Enable real blockchain transactions (false = demo mode)
VITE_ENABLE_BLOCKCHAIN=true

# Enable ZK proof generation
VITE_ENABLE_ZK_PROOFS=true

# ===== API ENDPOINTS =====
# For diploma verification service (optional)
VITE_VERIFICATION_API=https://api.privatediploma.example.com

# ===== GAS CONFIGURATION =====
# Default gas limit for diploma issuance
VITE_GAS_LIMIT_ISSUANCE=250000

# Default gas limit for verification
VITE_GAS_LIMIT_VERIFY=200000

# Gas price multiplier (1.0 = normal, 1.5 = faster)
VITE_GAS_PRICE_MULTIPLIER=1.0
