{
  "name": "private-diploma",
  "version": "1.0.0",
  "description": "Privacy-Preserving Educational Credential Verification System on Midnight Network",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "npm run dev",
    "verify": "node verify.js",
    "contract:compile": "npx -p @midnight-ntwrk/midnight-cli midnight compact contracts/PrivateDiploma.compact",
    "contract:deploy": "npx -p @midnight-ntwrk/midnight-cli midnight deploy contracts/PrivateDiploma.compact"
  },
  "dependencies": {
    "@midnight-ntwrk/wallet-api": "*",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-mkcert": "^1.17.9"
  }
}
